    {
      "name": "Animate Dead",
      "type": "spell",
      "img": "https://assets.forge-vtt.com/bazaar/core/icons/magic/death/skeleton-skull-soul-blue.webp",
      "flags": {
        "srd5e": {
          "page": "spells.html",
          "source": "PHB",
          "hash": "animate%20dead_phb",
          "propDroppable": "spell"
